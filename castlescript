#!/usr/bin/env bash
# CastleScript Launcher for Linux/macOS
# Usage: ./castlescript <file.cs>

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

if [ $# -eq 0 ]; then
    echo "CastleScript - Bahasa Pemrograman Indonesia"
    echo "Penggunaan: ./castlescript <file.cs>"
    exit 1
fi

python3 "$SCRIPT_DIR/castlescript.py" "$@"
